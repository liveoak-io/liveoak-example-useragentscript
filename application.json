{
  "name" : "${application.id}",
  "example" : "useragentscript",
  "resources" : {
    "app" : {
      "type" : "filesystem",
      "config" : {
        "directory" : "${application.dir}/app"
      }
    },
    "client" : {
      "type" : "aggregating-filesystem",
      "config" : {
        "directory" : "${io.liveoak.js.dir}"
      }
    },
    "auth" : {
      "type" : "keycloak",
      "config" : { }
    },
    "authz" : {
      "type" : "security",
      "config" : {
        "policies" : [ {
          "policyName" : "URIPolicy",
          "policyResourceEndpoint" : "/${application.id}/uri-policy/authzCheck"
        }, {
          "policyName" : "ACLPolicy",
          "policyResourceEndpoint" : "/${application.id}/acl-policy/authzCheck",
          "includedResourcePrefixes" : [ "/${application.id}" ]
        } ]
      }
    },
    "uri-policy" : {
      "type" : "uri-policy",
      "config" : {
        "rules" : [ {
          "uriPattern" : "*",
          "requestTypes" : [ "*" ],
          "allowedUsers" : [ "*" ]
        } ]
      }
    },
    "acl-policy" : {
      "type" : "acl-policy",
      "config" : {
        "autoRules" : [ ]
      }
    },
    "storage" : {
      "type" : "mongo",
      "config" : {
        "db" : "${application.id}"
      }
    },
    "scripts" : {
      "type" : "scripts",
      "config" : {
        "script-directory" : "${application.dir}/scripts"
      }
    }
  }
}
